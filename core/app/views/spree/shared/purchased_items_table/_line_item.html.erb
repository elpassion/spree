<% image = line_item.variant.images.first %>
<% image_url = image ? main_app.url_for(image.url(:small)) : 'noimage/small.png' %>
<tr>
  <td class="purchase_image">
    <% if frontend_available? %>
      <%= link_to(image_tag(image_url), spree.product_url(line_item.variant.product)) %>
    <% else %>
      <%= image_tag(image_url) %>
    <% end %>
  </td>
  <td class="purchase_item">
    <strong>
      <span class="f-fallback">
        <% if frontend_available? %>
          <%= link_to raw(line_item.variant.product.name), spree.product_url(line_item.variant.product) %>
        <% else %>
          <%= raw(line_item.variant.product.name) %>
        <% end %>
      </span>
    </strong>
    <p class="purchase_item--additional"><%= raw(line_item.variant.options_text) -%></p>
  </td>
  <td class="align-right">
    <span class="f-fallback purchase_item_price">
      <%= line_item.quantity %> x <%= line_item.single_money %>
      <%= line_item.display_amount %>
    </span>
  </td>
</tr>
